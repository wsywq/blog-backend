<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.TagMapper">

    <!-- 根据名称查找标签 -->
    <select id="selectByName" resultType="com.blog.entity.Tag">
        SELECT * FROM tags WHERE name = #{name}
    </select>

    <!-- 检查标签名称是否存在 -->
    <select id="existsByName" resultType="boolean">
        SELECT COUNT(*) > 0 FROM tags WHERE name = #{name}
    </select>

    <!-- 根据名称列表查找标签 -->
    <select id="selectByNameIn" resultType="com.blog.entity.Tag">
        SELECT * FROM tags WHERE name IN
        <foreach collection="names" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>
    </select>

</mapper>
